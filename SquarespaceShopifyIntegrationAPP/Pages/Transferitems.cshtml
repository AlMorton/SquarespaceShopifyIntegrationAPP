@page "{url?}"
@model SquarespaceShopifyIntegrationAPP.Pages.TransferitemsModel
@{
}
<form>
    <div class="d-flex flex-row flex-wrap">
        @{
            var count = 1;
        }
        @foreach (var item in Model.ArtistPictureLinks)
        {
                <div class="card artist-link flex-column justify-content-center" style="width: 18rem;">
                    <img src="@item.GetImageWithSize(250)" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column justify-content-end">
                        <div class="d-flex flex-row justify-content-center">
                             <h5 class="d-flex card-title">@item.Name</h5>
                        </div>
                        <div class="d-flex flex-row justify-content-center">
                            <input type="checkbox" class="btn-check" id="btn-check-@count-outlined" checked autocomplete="off">
                            <label class="btn btn-outline-secondary" for="btn-check-@count-outlined">Add To Shop</label><br>
                        </div>
                    </div>
                </div>
            
            count++;
        }
    </div>
</form>